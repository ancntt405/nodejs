 <div id="carouselExampleInterval" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            {{#each banner}}
            <div class="carousel-item active" data-bs-interval="3000">
                <img src="images/{{this.image}}" class="d-block w-100" alt="..." width="500" height="400">
            </div>
            {{/each}}
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    <!-- Kiến Thức Section -->
    <section class="py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-4">Thông Tin</h2>
        <div class="d-flex flex-wrap justify-content-between">
            {{#each brands}}
            <div class="card mb-5 mx-2" style="width: 18rem;">
                <img src="images/{{this.image}}" alt="" height="200" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title" style="font-family:'Times New Roman', Times, serif; font-size: 20px; font-weight:bolder">
                        {{this.name}}
                    </h5>
                    <p class="card-text">{{this.description}}</p>
                </div>
            </div>
            {{/each}}
        </div>
    </div>

